{
  "scripts": {
    "$": "npm-dollar",
    "bench": "http-server",
    "build": "npm run $ build && npm run bench",
    "install": "npm run $ install && npm run build"
  },
  "npm-dollar": {
    "build": {
      "polymer": [
        "cd polymer",
        "npm run build",
        "npm run make-modules",
        "npm run make-index",
        "npm run make-counter",
        "cd -"
      ],
      "react-component": [
        "cd react-component",
        "npm run build",
        "npm run make-relative",
        "cd -"
      ],
      "react-hooks": [
        "cd react-hooks",
        "npm run build",
        "npm run make-relative",
        "cd -"
      ],
      "vue": [
        "cd vue",
        "npm run build",
        "npm run make-relative",
        "cd -"
      ]
    },
    "install": {
      "react-component": [
        "cd react-component",
        "npm i",
        "cd -"
      ]
    }
  },
  "dependencies": {
    "npm-dollar": "^2.0.0",
    "http-server": "^0.11.1"
  }
}
